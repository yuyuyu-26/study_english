<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@word) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.text_area :english, placeholder: "単語(30字以内)", class: 'form-control' %>
      <%= f.text_area :japanese, placeholder: "日本語(50字以内)", class: 'form-control' %>
      <%= f.submit "作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
