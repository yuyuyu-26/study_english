<% if @words.count >= 10 %>  
  <p id="target">click to start</p>
  Letter count: <span id="score">0</span>,
  Miss count: <span id="miss">0</span>,
  Time left: <span id="timer">0.00</span>
  <div id="react"></div>
    <%= form_tag "/answers" do %>
    <div id="question">
      <% @words.each do |word| %>
        <%= word.english %>
        <%= hidden_field_tag "word[]", word.id %>
        <%= text_field_tag "word#{word.id}" %>
      <% end %>
    </div>
      <%= submit_tag "回答" %>
      <% end %>
  </div>
<% else %>
 <p>未達成の単語が10個以上あると、この機能が解放されるよ</p>
<% end %>
<%= javascript_include_tag "main.js" %>